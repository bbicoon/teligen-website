# teligen.co.kr을 www.teligen.co.kr로 리다이렉트
RewriteEngine On

# teligen.co.kr로 접속한 경우 www.teligen.co.kr로 리다이렉트
RewriteCond %{HTTP_HOST} ^teligen\.co\.kr$ [NC]
RewriteRule ^(.*)$ https://www.teligen.co.kr/$1 [R=301,L]

# HTTPS 강제 리다이렉트 (www.teligen.co.kr)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^www\.teligen\.co\.kr$ [NC]
RewriteRule ^(.*)$ https://www.teligen.co.kr/$1 [R=301,L]

# SPA 라우팅을 위한 설정
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
